<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Frame name="CommPanelFrame" parent="UIParent" toplevel="true"
  enableMouse="true" hidden="false" moveable="true">
    <Size>
      <AbsDimension x="400" y="300" />
    </Size>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
    edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
      <BackgroundInsets>
        <AbsInset left="11" right="12" top="12" bottom="11"/>
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="32"/>
      </TileSize>
      <EdgeSize>
        <AbsValue val="32"/>
      </EdgeSize>
    </Backdrop>
    <Frames>
      <EditBox name="$parent_LeaderNameText" letters="80" autoFocus="false" inherits="InputBoxTemplate">
        <Size x="110" y="32" />
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset x="25" y="-50" />
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <!--<Texture file="Interface\ChatFrame\UI-ChatInputBorder-Left">
              <Size x="75" y="32" />
              <Anchors>
                <Anchor point="LEFT">
                  <Offset x="-10" y="0" />
                </Anchor>
              </Anchors>
              <TexCoords left="0" right="0.2" top="0" bottom="1.0"/>
            </Texture>
            <Texture file="Interface\ChatFrame\UI-ChatInputBorder-Right">
              <Size x="75" y="32" />
              <Anchors>
                <Anchor point="RIGHT">
                  <Offset x="10" y="0" />
                </Anchor>
              </Anchors>
              <TexCoords left="0.7" right="1.0" top="0" bottom="1.0"/>
            </Texture> -->
          </Layer>
        </Layers>
        <Scripts>
          <OnLoad>
          </OnLoad>
          <OnEscapePressed>
            self:ClearFocus();
          </OnEscapePressed>
        </Scripts>
        <FontString inherits="ChatFontNormal" />
      </EditBox>
      <Frame parent="CommPanelFrame">
        <Frames>
          <Button name="MyDropDownMenuButton">
            <Scripts>
              <OnClick>
                MyDropDownMenuButton_OnClick();
              </OnClick>
            </Scripts>
          </Button>
        </Frames>
      </Frame>
    </Frames>
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parent_Heading" inherits="GameFontNormalSmall" text="Stormwind City Guard Comms">
          <Anchors>
            <Anchor point="TOP" y="-20"/>
          </Anchors>
        </FontString>

        <FontString name="$parent_PatrolNameTextLabel" inherits="GameFontNormalSmall" text="Patrol Leader's Name">
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent_LeaderNameText" y="10"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>
